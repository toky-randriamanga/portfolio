{% extends "/public/main.html.twig" %}

{% block content %}
<div class="contact">
    <div class="text-center">
        <h3 class="text-secondary">
            Contactez-moi
        </h3>
    </div>
    <div class="d-flex flex-wrap w-100">
        <div class="contact-form">
            <div class="mt-3">
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.message) }}
                    <div class="">
                        {% for type, messages in app.flashes(['success', 'warning']) %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <div class="text-end">
                        <button class="btn btn-sm bg-secondary">
                            Envoyer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="contact-info m-3 p-3">
            <div class="mt-3">
                <i class="bi bi-phone text-secondary me-2"></i>
                <span class="">+261 34 05 037 14</span>
            </div>
            <div class="mt-3">
                <i class="bi bi-envelope text-secondary me-2"></i>
                <span class="">tokiniaina.randriamanga@gmail.com</span>
            </div>
            <div class="mt-3">
                <i class="bi bi-linkedin text-secondary me-2"></i>
                <span class="">
                    <a href="https://www.linkedin.com/in/tokiniaina-randriamanga/" class="text-decoration-none text-white" target="_blank">
                        Tokiniaina Randriamanga
                    </a>
                </span>
            </div>
        </div>
    </div>
</div>
{% endblock %}