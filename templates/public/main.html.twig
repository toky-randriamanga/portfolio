<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Tokiniaina Randriamanga{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22></text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>TR</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto"> <!-- Alignement Ã  droite -->
                        <li class="nav-item">
                            <a class="{{ app.request.attributes.get('_route') == 'public_home_display' ? 'nav-link active' : 'nav-link' }}" href="{{ path('public_home_display') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="{{ app.request.attributes.get('_route') == 'public_project_display' ? 'nav-link active' : 'nav-link' }}" href="{{ path('public_project_display') }}">Projets</a>
                        </li>
                        <li class="nav-item">
                            <a class="{{ app.request.attributes.get('_route') == 'public_contact_display' ? 'nav-link active' : 'nav-link' }}" href="{{ path('public_contact_display') }}">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
